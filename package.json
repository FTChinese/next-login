{
  "name": "@ftchinese/next-user",
  "version": "0.7.14",
  "description": "User setting system",
  "main": "src/server.ts",
  "bin": "dist/server.ts",
  "scripts": {
    "test": "jest",
    "postversion": "git push && git push --tags",
    "clean": "rm -rf build/*",
    "build-css": "node-sass --output-style=compressed --include-path=node_modules/bootstrap client/scss/main.scss build/style/main.css",
    "build-ts": "tsc -p client --outDir build/ts-out",
    "watch-ts": "tsc -p client -w --outDir build/ts-out",
    "build-js": "rollup -c client/rollup.config.js",
    "watch-js": "rollup -c client/rollup.config.js -w",
    "dev": "npm-run-all --parallel watch-js",
    "build": "npm run build-js && npm run build-css"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/FTChinese/next-user.git"
  },
  "author": "weiguo.ni",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/FTChinese/next-user/issues"
  },
  "homepage": "https://github.com/FTChinese/next-user#readme",
  "dependencies": {
    "@hapi/joi": "^15.1.1",
    "chance": "^1.1.4",
    "csrf": "^3.1.0",
    "debug": "^4.1.1",
    "koa": "^2.11.0",
    "koa-bodyparser": "^4.3.0",
    "koa-csrf": "^3.0.8",
    "koa-logger": "^3.2.1",
    "koa-router": "^7.4.0",
    "koa-session": "^5.13.1",
    "koa-static": "^5.0.0",
    "lodash": "^4.17.15",
    "luxon": "^1.23.0",
    "marked": "^1.0.0",
    "mobile-detect": "^1.4.4",
    "numeral": "^2.0.6",
    "nunjucks": "^3.2.1",
    "nunjucks-markdown": "^2.0.1",
    "qrcode": "^1.4.4",
    "reflect-metadata": "^0.1.13",
    "superagent": "^5.2.2",
    "toml": "^3.0.0",
    "typedjson": "^1.5.1",
    "ua-parser-js": "^0.7.21",
    "validator": "^13.0.0"
  },
  "devDependencies": {
    "@rollup/plugin-buble": "^0.21.3",
    "@rollup/plugin-commonjs": "^11.1.0",
    "@rollup/plugin-node-resolve": "^7.1.3",
    "@rollup/plugin-typescript": "^4.1.1",
    "@types/chance": "^1.0.10",
    "@types/debug": "^4.1.5",
    "@types/hapi__joi": "^15.0.4",
    "@types/jest": "^25.2.1",
    "@types/koa": "^2.11.3",
    "@types/koa-bodyparser": "^4.3.0",
    "@types/koa-logger": "^3.1.1",
    "@types/koa-router": "^7.4.0",
    "@types/koa-session": "^5.10.2",
    "@types/koa-static": "^4.0.1",
    "@types/luxon": "^1.22.0",
    "@types/marked": "^0.7.4",
    "@types/node": "^13.13.4",
    "@types/numeral": "0.0.27",
    "@types/nunjucks": "^3.1.3",
    "@types/qrcode": "^1.3.4",
    "@types/superagent": "^4.1.7",
    "@types/validator": "^13.0.0",
    "bootstrap": "^4.4.1",
    "bootstrap.native": "^2.0.27",
    "faker": "^4.1.0",
    "inline-source": "^7.2.0",
    "jest": "^25.4.0",
    "node-sass": "^4.14.0",
    "nodemon": "^2.0.3",
    "npm-run-all": "^4.1.5",
    "rollup": "^2.7.2",
    "rollup-plugin-svelte": "^5.2.1",
    "rollup-plugin-terser": "^5.3.0",
    "svelte": "^3.21.0",
    "svelte-preprocess": "^3.7.4",
    "ts-jest": "^25.4.0",
    "ts-node": "^8.9.1",
    "tslib": "^1.11.1",
    "typescript": "^3.8.3"
  },
  "pkg": {
    "assets": "views/**/*"
  },
  "nodemonConfig": {
    "ignore": [
      "build/**",
      "client/**",
      "views/**",
      "test/**"
    ],
    "env": {
      "NODE_ENV": "development",
      "PORT": 4300,
      "DEBUG": "user*"
    },
    "verbose": true
  }
}
