{
  "name": "@ftchinese/next-user",
  "version": "0.10.0",
  "description": "User setting system",
  "main": "src/server.ts",
  "bin": "dist/server.ts",
  "scripts": {
    "test": "jest",
    "postversion": "git push && git push --tags",
    "clean": "rm -rf build/*",
    "watch-css": "sass --watch --style=expanded --load-path=node_modules/bootstrap client/scss/main.scss build/style/main.css",
    "build-css": "sass --style=compressed --load-path=node_modules/bootstrap client/scss/main.scss build/style/main.css",
    "build-ts": "tsc -p client --outDir build/ts-out",
    "watch-ts": "tsc -p client -w --outDir build/ts-out",
    "build-js": "rollup -c client/rollup.config.js",
    "watch-js": "rollup -c client/rollup.config.js -w",
    "dev": "npm-run-all --parallel watch-js watch-css",
    "build": "npm run build-js && npm run build-css",
    "server": "nodemon --ext ts --ignore dist/ --exec ts-node src/server.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/FTChinese/next-user.git"
  },
  "author": "weiguo.ni",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/FTChinese/next-user/issues"
  },
  "homepage": "https://github.com/FTChinese/next-user#readme",
  "dependencies": {
    "@hapi/joi": "^17.1.1",
    "chance": "^1.1.7",
    "csrf": "^3.1.0",
    "date-fns": "^2.16.1",
    "debug": "^4.2.0",
    "koa": "^2.13.0",
    "koa-bodyparser": "^4.3.0",
    "koa-csrf": "^3.0.8",
    "koa-logger": "^3.2.1",
    "koa-router": "^9.4.0",
    "koa-session": "^6.1.0",
    "koa-static": "^5.0.0",
    "lodash": "^4.17.20",
    "luxon": "^1.25.0",
    "marked": "^1.2.0",
    "mobile-detect": "^1.4.4",
    "node-cache": "^5.1.2",
    "numeral": "^2.0.6",
    "nunjucks": "^3.2.2",
    "nunjucks-markdown": "^2.0.1",
    "qrcode": "^1.4.4",
    "reflect-metadata": "^0.1.13",
    "superagent": "^6.1.0",
    "toml": "^3.0.0",
    "typedjson": "^1.5.2",
    "ua-parser-js": "^0.7.22",
    "validator": "^13.1.17"
  },
  "devDependencies": {
    "@rollup/plugin-buble": "^0.21.3",
    "@rollup/plugin-commonjs": "^15.1.0",
    "@rollup/plugin-node-resolve": "^9.0.0",
    "@rollup/plugin-typescript": "^6.0.0",
    "@types/chance": "^1.1.0",
    "@types/debug": "^4.1.5",
    "@types/hapi__joi": "^17.1.6",
    "@types/jest": "^26.0.14",
    "@types/koa": "^2.11.4",
    "@types/koa-bodyparser": "^4.3.0",
    "@types/koa-logger": "^3.1.1",
    "@types/koa-router": "^7.4.1",
    "@types/koa-session": "^5.10.3",
    "@types/koa-static": "^4.0.1",
    "@types/luxon": "^1.25.0",
    "@types/marked": "^1.1.0",
    "@types/node": "^14.11.8",
    "@types/node-cache": "^4.2.5",
    "@types/numeral": "0.0.28",
    "@types/nunjucks": "^3.1.3",
    "@types/qrcode": "^1.3.5",
    "@types/superagent": "^4.1.10",
    "@types/validator": "^13.1.0",
    "bootstrap": "^4.5.2",
    "bootstrap.native": "^3.0.13",
    "faker": "^5.1.0",
    "inline-source": "^7.2.0",
    "jest": "^26.5.3",
    "nodemon": "^2.0.4",
    "npm-run-all": "^4.1.5",
    "rollup": "^2.29.0",
    "rollup-plugin-terser": "^7.0.2",
    "sass": "^1.27.0",
    "ts-jest": "^26.4.0",
    "ts-node": "^9.0.0",
    "tslib": "^2.0.3",
    "typescript": "^4.0.3"
  },
  "pkg": {
    "assets": "views/**/*"
  },
  "nodemonConfig": {
    "ignore": [
      "build/**",
      "client/**",
      "views/**",
      "test/**"
    ],
    "env": {
      "NODE_ENV": "development",
      "PORT": 4300,
      "DEBUG": "user*"
    },
    "verbose": true
  }
}
