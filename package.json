{
  "name": "@ftchinese/next-user",
  "version": "0.1.2",
  "description": "User setting system",
  "main": "index.js",
  "scripts": {
    "start": "npm run serve",
    "serve": "node dist/index.js",
    "watch-node": "nodemon dist/index.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
    "test": "jest",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "postversion": "git push && git push --tags",
    "postinstall": "",
    "clean": "rm -rf dist/*",
    "profile": "NODE_ENV=production PORT=4100 node --prof index.js",
    "prod": "NODE_ENV=production PORT=4100 node index.js",
    "vegeta": "vegeta attack -targets=targets.txt -rate=100 -duration=60s > .tmp/results.bin",
    "report": "vegeta report -inputs=.tmp/results.bin -reporter=plot > .tmp/plot.html"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/FTChinese/next-user.git"
  },
  "author": "weiguo.ni",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/FTChinese/next-user/issues"
  },
  "homepage": "https://github.com/FTChinese/next-user#readme",
  "dependencies": {
    "csrf": "^3.0.6",
    "debug": "^4.1.0",
    "dotenv": "^6.2.0",
    "koa": "^2.6.2",
    "koa-bodyparser": "^4.2.1",
    "koa-csrf": "^3.0.6",
    "koa-logger": "^3.2.0",
    "koa-router": "^7.4.0",
    "koa-session": "^5.10.0",
    "lodash": "^4.17.11",
    "moment": "^2.23.0",
    "nunjucks": "^3.1.6",
    "superagent": "^4.0.0",
    "ua-parser-js": "^0.7.19",
    "validator": "^10.9.0"
  },
  "devDependencies": {
    "ava": "^1.0.1",
    "bootstrap": "^4.1.3",
    "bootstrap.native": "^2.0.24",
    "chance": "^1.0.18",
    "concurrently": "^4.1.0",
    "koa-static": "^5.0.0"
  }
}
